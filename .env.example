# Example environment variables
# Copy this file to .env.local for development or .env.production for production

# API Base URL - Update this based on your deployment
# For development: http://localhost:3000
# For production: https://your-site-name.netlify.app
NEXT_PUBLIC_API_BASE_URL=https://your-site-name.netlify.app

# Database connection string
DATABASE_URL="your-database-connection-string"

# JWT Secret for authentication (change this in production!)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"